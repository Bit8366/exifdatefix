{
    // https://dev.to/facepalm/how-to-set-formatting-and-linting-on-vscode-for-python-using-black-formatter-and-flake8-extensions-322o
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true, // new
    "black-formatter.args": [
        "--line-length", "88",
    ],

    "flake8.args": [
    "--max-line-length", "88",
    "--extend-ignore", "E203"
   ],

    "[python]": {
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "editor.formatOnSave": true, // new
       },
 }
 